<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvJustified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="20sp"
        android:justificationMode="inter_word"
        android:text="Under the profile the user can view their personal details" />
    <TextView
        android:id="@+id/tvJustified1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="20sp"
        android:justificationMode="inter_word"
        android:text="The user can interact with the administrator" />
    <TextView
        android:id="@+id/tvJustified2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="20sp"
        android:justificationMode="inter_word"
        android:text="The user is permitted to report any crime and will receive a case number after reporting." />
    <TextView
        android:id="@+id/tvJustified3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="20sp"
        android:justificationMode="inter_word"
        android:text="When the user clicks the logout button, it exit the application.The logout button is used to exit the application" />


</LinearLayout>